<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container text-center">
      <h1 class="display-3 text-center mb-4">Messages</h1>
      <form class="mb-3" action="/message" method="post">
        <input type="text" name="message" id="msg" class="form-control d-inline w-auto">
        <input type="submit" value="Submit" class="btn btn-dark">
      </form>
      <ul>
        <% messages.forEach(message=>{ %>
        <li>
            <span class="me-3"><%= message.data %></span>
            <a class="btn btn-warning" href="/edit/<%= message._id %> ">Edit</a>
            <a class="btn btn-danger" href="/delete/<%= message._id %> ">Delete</a>
        </li>
        <% }) %>
      </ul>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
